      <bind nodeset="/contact_follow_up/group_follow_up/health_care_worker_handed_to" relevant=" /contact_follow_up/group_follow_up/status_call  = 'responded' or  /contact_follow_up/group_follow_up/status_visit = 'available'" type="string"/>
      <bind nodeset="/contact_follow_up/group_follow_up/unique_patient_number" relevant=" /contact_follow_up/group_follow_up/status_call  = 'responded' or  /contact_follow_up/group_follow_up/status_visit = 'available'" type="string"/>
      <bind nodeset="/contact_follow_up/group_follow_up/n_remarks" readonly="true()" type="string"/>
      <bind nodeset="/contact_follow_up/group_follow_up/remarks" type="string"/>
      <bind nodeset="/contact_follow_up/group_follow_up/n_remarks_delimiter" readonly="true()" type="string"/>
