      <bind nodeset="/contact_follow_up/needs_signoff" type="string"/>
      <bind nodeset="/contact_follow_up/group_follow_up/n_details" readonly="true()" required="true()" type="string"/>
      <bind constraint="floor(decimal-date-time(.)) &lt;= floor(decimal-date-time(today()))" jr:constraintMsg="Date must not be in the future" nodeset="/contact_follow_up/group_follow_up/date_last_contact" readonly="true()" required="true()" type="string"/>
      <bind constraint="not(selected(.,'phone') and  /contact_follow_up/inputs/contact/phone  = '')" jr:constraintMsg="There's no registered phone number" nodeset="/contact_follow_up/group_follow_up/follow_up_type" required="true()" type="select1"/>
