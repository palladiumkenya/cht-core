<?xml version="1.0"?>
<h:html xmlns="http://www.w3.org/2002/xforms" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:jr="http://openrosa.org/javarosa" xmlns:orx="http://openrosa.org/xforms" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <h:head>
    <h:title>HTS screening form</h:title>
    <model>
      <itext>
        <translation lang="en">
          <text id="/hts_screening/encounter_date:jr:constraintMsg">
            <value>Encounter date can not be in the future</value>
          </text>
          <text id="/hts_screening/observation/_164400_dateTested_99DCT:jr:constraintMsg">
            <value>Date tested can not be in the future</value>
          </text>
        </translation>
      </itext>
      <instance>
        <hts_screening delimiter="#" id="hts_screening_form" prefix="J1!hts_screening_form!" version="2020-09-10 16:52:38">
          <inputs>
            <meta>
              <location>
                <lat/>
                <long/>
                <error/>
                <message/>
              </location>
            </meta>
            <user>
              <contact_id/>
              <facility_id/>
              <name/>
            </user>
            <source>user</source>
            <source_id/>
            <contact>
              <_id/>
              <name/>
              <kemr_uuid/>
              <contact>
                <_id/>
                <name/>
              </contact>
              <parent>
                <parent>
                  <contact>
                    <name/>
                    <phone/>
                  </contact>
                </parent>
              </parent>
            </contact>
          </inputs>
          <source/>
          <source_id/>
          <place_id/>
          <place_name/>
          <head/>
          <form_uuid/>
          <encounter_type_uuid/>
          <encounter_date/>
          <hts_service/>
          <observation>
            <_164401_everTestedByProvider_99DCT/>
            <_159427_testResults_99DCT/>
            <_164400_dateTested_99DCT/>
            <duration_since_last_test/>
            <no_of_days_note/>
            <_162699_eligibleForTesting_99DCT/>
            <screening_outcome_text/>
            <outcome_header/>
            <_163042_remarks_99DCT/>
          </observation>
          <group_review>
            <n_submit/>
            <n_household_details_title/>
            <n_household_details/>
            <n_assessment_findings/>
            <hiv_tested_before/>
            <yes/>
            <no/>
            <results/>
            <results_positive/>
            <results_negative/>
            <testeligible/>
            <eligible_yes/>
            <eligible_no/>
          </group_review>
          <audit_trail>
            <created_by/>
          </audit_trail>
          <meta tag="hidden">
            <instanceID/>
          </meta>
        </hts_screening>
      </instance>
      <instance id="contact-summary"/>
      <bind nodeset="/hts_screening/inputs" relevant="./source = 'user'"/>
      <bind nodeset="/hts_screening/inputs/user/contact_id" type="string"/>
      <bind nodeset="/hts_screening/inputs/user/facility_id" type="string"/>
      <bind nodeset="/hts_screening/inputs/user/name" type="string"/>
      <bind nodeset="/hts_screening/inputs/source" type="string"/>
      <bind nodeset="/hts_screening/inputs/source_id" type="string"/>
      <bind nodeset="/hts_screening/inputs/contact/_id" type="db:clinic"/>
      <bind nodeset="/hts_screening/inputs/contact/name" type="string"/>
      <bind nodeset="/hts_screening/inputs/contact/kemr_uuid" type="string"/>
      <bind nodeset="/hts_screening/inputs/contact/contact/_id" type="db:person"/>
      <bind nodeset="/hts_screening/inputs/contact/contact/name" type="string"/>
      <bind nodeset="/hts_screening/inputs/contact/parent/parent/contact/name" type="string"/>
      <bind nodeset="/hts_screening/inputs/contact/parent/parent/contact/phone" type="string"/>
      <bind calculate="../inputs/source" nodeset="/hts_screening/source" type="string"/>
      <bind calculate="../inputs/source_id" nodeset="/hts_screening/source_id" type="string"/>
      <bind calculate="../inputs/contact/_id" nodeset="/hts_screening/place_id" type="string"/>
      <bind calculate="../inputs/contact/name" nodeset="/hts_screening/place_name" type="string"/>
      <bind calculate="../inputs/contact/contact/name" nodeset="/hts_screening/head" type="string"/>
      <bind calculate="'04295648-7606-11e8-adc0-fa7ae01bbebc'" nodeset="/hts_screening/form_uuid" type="string"/>
      <bind calculate="'9c0a7a57-62ff-4f75-babe-5835b0e921b7'" nodeset="/hts_screening/encounter_type_uuid" type="string"/>
      <bind constraint="floor(decimal-date-time(.)) &lt;= floor(decimal-date-time(today())) and floor( difference-in-months( . , today() ) div 12 ) &lt;= 100" jr:constraintMsg="jr:itext('/hts_screening/encounter_date:jr:constraintMsg')" nodeset="/hts_screening/encounter_date" required="true()" type="date"/>
      <bind nodeset="/hts_screening/hts_service" required="true()" type="select1"/>
      <bind nodeset="/hts_screening/observation" relevant="selected( /hts_screening/hts_service ,'newOrRetest')"/>
      <bind nodeset="/hts_screening/observation/_164401_everTestedByProvider_99DCT" required="true()" type="select1"/>
      <bind nodeset="/hts_screening/observation/_159427_testResults_99DCT" relevant="selected( /hts_screening/observation/_164401_everTestedByProvider_99DCT ,'_1065_yes_99DCT')" required="true()" type="select1"/>
      <bind constraint="floor(decimal-date-time(.)) &lt;= floor(decimal-date-time(today())) and floor( difference-in-months( . , today() ) div 12 ) &lt;= 100" jr:constraintMsg="jr:itext('/hts_screening/observation/_164400_dateTested_99DCT:jr:constraintMsg')" nodeset="/hts_screening/observation/_164400_dateTested_99DCT" relevant="selected( /hts_screening/observation/_164401_everTestedByProvider_99DCT ,'_1065_yes_99DCT')" required="true()" type="date"/>
      <bind calculate="difference-in-months(  /hts_screening/observation/_164400_dateTested_99DCT  , today() )" nodeset="/hts_screening/observation/duration_since_last_test" relevant="selected( /hts_screening/observation/_164401_everTestedByProvider_99DCT ,'_1065_yes_99DCT')" type="string"/>
      <bind nodeset="/hts_screening/observation/no_of_days_note" readonly="true()" relevant="selected( /hts_screening/observation/_164401_everTestedByProvider_99DCT ,'_1065_yes_99DCT')" type="string"/>
      <bind calculate="if( /hts_screening/observation/_164401_everTestedByProvider_99DCT ='_1065_yes_99DCT' and  /hts_screening/observation/duration_since_last_test  &gt; 12 and  /hts_screening/observation/_159427_testResults_99DCT  != '_703_positive_99DCT', '_1065_yes_99DCT', if( /hts_screening/observation/_164401_everTestedByProvider_99DCT ='_1066_no_99DCT', '_1065_yes_99DCT', '_1066_no_99DCT'))" nodeset="/hts_screening/observation/_162699_eligibleForTesting_99DCT" type="string"/>
      <bind calculate="if( /hts_screening/observation/_164401_everTestedByProvider_99DCT ='_1065_yes_99DCT' and  /hts_screening/observation/duration_since_last_test  &gt; 12 and  /hts_screening/observation/_159427_testResults_99DCT  != '_703_positive_99DCT', 'Eligible', if( /hts_screening/observation/_164401_everTestedByProvider_99DCT ='_1066_no_99DCT', 'Eligible', if( /hts_screening/observation/_164401_everTestedByProvider_99DCT ='_1065_yes_99DCT' and  /hts_screening/observation/_159427_testResults_99DCT  = '_703_positive_99DCT','Not eligible',if( /hts_screening/observation/_164401_everTestedByProvider_99DCT ='_1065_yes_99DCT' and  /hts_screening/observation/duration_since_last_test  &lt;= 12 and  /hts_screening/observation/_159427_testResults_99DCT  = '_664_negative_99DCT', 'Not eligible',''))))" nodeset="/hts_screening/observation/screening_outcome_text" type="string"/>
      <bind nodeset="/hts_screening/observation/outcome_header" readonly="true()" relevant="selected( /hts_screening/observation/_164401_everTestedByProvider_99DCT ,'_1065_yes_99DCT') or selected( /hts_screening/observation/_164401_everTestedByProvider_99DCT ,'_1066_no_99DCT')" type="string"/>
      <bind nodeset="/hts_screening/observation/_163042_remarks_99DCT" type="string"/>
      <bind nodeset="/hts_screening/group_review" relevant="selected( /hts_screening/hts_service ,'newOrRetest')"/>
      <bind nodeset="/hts_screening/group_review/n_submit" readonly="true()" type="string"/>
      <bind nodeset="/hts_screening/group_review/n_household_details_title" readonly="true()" type="string"/>
      <bind nodeset="/hts_screening/group_review/n_household_details" readonly="true()" type="string"/>
      <bind nodeset="/hts_screening/group_review/n_assessment_findings" readonly="true()" type="string"/>
      <bind nodeset="/hts_screening/group_review/hiv_tested_before" readonly="true()" type="string"/>
      <bind nodeset="/hts_screening/group_review/yes" readonly="true()" relevant="selected(../../observation/_164401_everTestedByProvider_99DCT, '_1065_yes_99DCT')" type="string"/>
      <bind nodeset="/hts_screening/group_review/no" readonly="true()" relevant="selected(../../observation/_164401_everTestedByProvider_99DCT, '_1066_no_99DCT')" type="string"/>
      <bind nodeset="/hts_screening/group_review/results" readonly="true()" type="string"/>
      <bind nodeset="/hts_screening/group_review/results_positive" readonly="true()" relevant="selected(../../observation/_159427_testResults_99DCT, '_703_positive_99DCT')" type="string"/>
      <bind nodeset="/hts_screening/group_review/results_negative" readonly="true()" relevant="selected(../../observation/_159427_testResults_99DCT, '_664_negative_99DCT')" type="string"/>
      <bind nodeset="/hts_screening/group_review/testeligible" readonly="true()" type="string"/>
      <bind nodeset="/hts_screening/group_review/eligible_yes" readonly="true()" relevant="selected(../../observation/_162699_eligibleForTesting_99DCT, '_1065_yes_99DCT')" type="string"/>
      <bind nodeset="/hts_screening/group_review/eligible_no" readonly="true()" relevant="selected(../../observation/_162699_eligibleForTesting_99DCT, '_1066_no_99DCT')" type="string"/>
      <bind calculate="../../inputs/user/name" nodeset="/hts_screening/audit_trail/created_by" type="string"/>
      <bind calculate="concat('uuid:', uuid())" nodeset="/hts_screening/meta/instanceID" readonly="true()" type="string"/>
    </model>
  </h:head>
  <h:body class="pages">
    <group appearance="field-list" ref="/hts_screening/inputs">
      <label>Patient</label>
      <group ref="/hts_screening/inputs/user">
        <label></label>
        <input ref="/hts_screening/inputs/user/contact_id">
          <label></label>
        </input>
        <input ref="/hts_screening/inputs/user/facility_id">
          <label></label>
        </input>
        <input ref="/hts_screening/inputs/user/name">
          <label></label>
        </input>
      </group>
      <group ref="/hts_screening/inputs/contact">
        <label>Contact</label>
        <input appearance="db-object" ref="/hts_screening/inputs/contact/_id">
          <label>What is the patient's name?</label>
        </input>
        <group ref="/hts_screening/inputs/contact/contact">
          <label>Contact</label>
          <input appearance="db-object" ref="/hts_screening/inputs/contact/contact/_id">
            <label>ID of head of household</label>
          </input>
        </group>
        <group ref="/hts_screening/inputs/contact/parent">
          <label>Parent</label>
          <group ref="/hts_screening/inputs/contact/parent/parent">
            <label>Parent</label>
            <group ref="/hts_screening/inputs/contact/parent/parent/contact">
              <label>Contact</label>
            </group>
          </group>
        </group>
      </group>
    </group>
    <input ref="/hts_screening/encounter_date">
      <label>Encounter date</label>
    </input>
    <select1 ref="/hts_screening/hts_service">
      <label>Required service</label>
      <item>
        <label>New/Retest</label>
        <value>newOrRetest</value>
      </item>
      <item>
        <label>Re-test to confirm +ve results</label>
        <value>confirmPositiveResult</value>
      </item>
    </select1>
    <group appearance="field-list" ref="/hts_screening/observation">
      <label>HTS eligibility screening</label>
      <select1 ref="/hts_screening/observation/_164401_everTestedByProvider_99DCT">
        <label>Tested for HIV before?</label>
        <item>
          <label>Yes</label>
          <value>_1065_yes_99DCT</value>
        </item>
        <item>
          <label>No</label>
          <value>_1066_no_99DCT</value>
        </item>
      </select1>
      <select1 ref="/hts_screening/observation/_159427_testResults_99DCT">
        <label>Test result</label>
        <item>
          <label>Positive</label>
          <value>_703_positive_99DCT</value>
        </item>
        <item>
          <label>Negative</label>
          <value>_664_negative_99DCT</value>
        </item>
      </select1>
      <input ref="/hts_screening/observation/_164400_dateTested_99DCT">
        <label>Date tested</label>
      </input>
      <input ref="/hts_screening/observation/no_of_days_note">
        <label>Months since last tested: <output value=" /hts_screening/observation/duration_since_last_test "/></label>
      </input>
      <input ref="/hts_screening/observation/outcome_header">
        <label>&lt;span style='color:brown;'&gt; &lt;i class=&quot;fa fa-warning&quot;&gt; HTS screening status: <output value=" /hts_screening/observation/screening_outcome_text "/>&lt;/i&gt;&lt;/span&gt;</label>
      </input>
      <input appearance="h1 blue" ref="/hts_screening/observation/_163042_remarks_99DCT">
        <label>Remark(s)</label>
      </input>
    </group>
    <group appearance="field-list summary" ref="/hts_screening/group_review">
      <label>Summary page</label>
      <input ref="/hts_screening/group_review/n_submit">
        <label>_Be sure you submit to complete this action._</label>
      </input>
      <input appearance="h1 yellow" ref="/hts_screening/group_review/n_household_details_title">
        <label>Client details&lt;I class="fa fa-user"&gt;&lt;/i&gt;</label>
      </input>
      <input ref="/hts_screening/group_review/n_household_details">
        <label>&lt;h4 style=&quot;text-align:center;&quot;&gt;<output value=" /hts_screening/place_name "/> <output value=" /hts_screening/head "/>&lt;/h4&gt;</label>
      </input>
      <input appearance="h1 blue" ref="/hts_screening/group_review/n_assessment_findings">
        <label>Assessment findings&lt;I class="fa fa-user"&gt;&lt;/i&gt;</label>
      </input>
      <input ref="/hts_screening/group_review/hiv_tested_before">
        <label>**_Tested for HIV before_**</label>
      </input>
      <input appearance="li" ref="/hts_screening/group_review/yes">
        <label>Yes</label>
      </input>
      <input appearance="li" ref="/hts_screening/group_review/no">
        <label>No</label>
      </input>
      <input ref="/hts_screening/group_review/results">
        <label>**_Test result_**</label>
      </input>
      <input appearance="li" ref="/hts_screening/group_review/results_positive">
        <label>Positive</label>
      </input>
      <input appearance="li" ref="/hts_screening/group_review/results_negative">
        <label>Negative</label>
      </input>
      <input ref="/hts_screening/group_review/testeligible">
        <label>**_HTS eligibility_**</label>
      </input>
      <input appearance="li" ref="/hts_screening/group_review/eligible_yes">
        <label>Eligible</label>
      </input>
      <input appearance="li" ref="/hts_screening/group_review/eligible_no">
        <label>Not eligible</label>
      </input>
    </group>
    <group appearance="hidden" ref="/hts_screening/audit_trail">
      <label></label>
    </group>
  </h:body>
</h:html>
